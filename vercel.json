{
  "redirects": [
    { "source": "/", "destination": "/en-gb", "permanent": true }
  ],
  "rewrites": [
    // Serve index.html for "/en-gb" and "/en-gb/"
    { "source": "/en-gb", "destination": "/index.html" },
    { "source": "/en-gb/", "destination": "/index.html" },

    // Allow data to be fetched under /en-gb/data/... but load from /data/en-gb/...
    { "source": "/en-gb/data/:path*", "destination": "/data/en-gb/:path*" },

    // Load static assets (like .js, .css) from the root
    { "source": "/en-gb/:path*", "destination": "/:path*" },

    // Terms page rewrite
    { "source": "/terms-of-use", "destination": "/terms-of-use.html" }
  ]
}
