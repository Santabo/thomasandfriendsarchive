{
  "redirects": [
    { "source": "/", "destination": "/en-gb", "permanent": true }
  ],
  "rewrites": [
    { "source": "/terms-of-use", "destination": "/terms-of-use.html" },

    // Keep /en-gb/data/* requests to the same folder (no rewrite)
    { "source": "/en-gb/data/:path*", "destination": "/en-gb/data/:path*" },

    // For other /en-gb/* URLs, strip /en-gb to serve files at root (like index.html, scripts, css)
    { "source": "/en-gb/:path*", "destination": "/:path*" },

    // Root en-gb requests serve index.html
    { "source": "/en-gb", "destination": "/index.html" },
    { "source": "/en-gb/", "destination": "/index.html" }
  ]
}
